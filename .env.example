HOST=0.0.0.0
PORT=8000
WORKERS=4
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aristotelian_ai
REDIS_URL=redis://localhost:6379

# API Keys
COHERE_API_KEY=your_cohere_api_key_here
FINE_TUNED_MODEL_ID=your_fine_tuned_model_id

# Feature Flags
AYA_INTEGRATION_ENABLED=true
EXPERT_VALIDATION_ENABLED=true
REAL_TIME_EVALUATION_ENABLED=true
PROMETHEUS_ENABLED=true

# Application Settings
SUPPORTED_LANGUAGES=en,es,fr,de,it
MAX_TOKENS=15000000
TRAINING_BATCH_SIZE=32

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=50

# Performance Settings
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL=3600

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
METRICS_EXPORT_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Evaluation Settings
EVALUATION_FREQUENCY=daily
TARGET_PHILOSOPHICAL_ACCURACY=0.8
TARGET_CULTURAL_APPROPRIATENESS=0.75
TARGET_ENGAGEMENT_IMPROVEMENT=0.38
TARGET_BLEU_PARITY=0.85

# Aya Integration
AYA_API_KEY=your_aya_api_key_here
AYA_DATASET_SHARING_ENABLED=true
AYA_COMMUNITY_FEEDBACK_ENABLED=true